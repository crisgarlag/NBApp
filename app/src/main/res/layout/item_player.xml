<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemPlayerLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/playerNameTextView"
        android:layout_width="274dp"
        android:layout_height="29dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/blue_800"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/playerTeamTextView"
        app:layout_constraintStart_toEndOf="@+id/urlPhotoimageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/playerTeamTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_800"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/playerId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/playerNameTextView"
        app:layout_constraintTop_toBottomOf="@+id/playerNameTextView" />

    <TextView
        android:id="@+id/playerId"
        style="@style/textViewGone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/playerTeamTextView"
        app:layout_constraintTop_toBottomOf="@+id/playerTeamTextView" />

    <ImageView
        android:id="@+id/urlPhotoimageView"
        android:layout_width="100dp"
        android:layout_height="114dp"
        android:layout_marginTop="4dp"
        android:transitionName="imagePlayerTransition"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/imagenPlayer" />

    <TextView
        android:id="@+id/playerUrlPhoto"
        style="@style/textViewGone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/playerTeamTextView"
        app:layout_constraintTop_toBottomOf="@+id/playerTeamTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>
