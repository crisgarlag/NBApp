<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <Button
        android:id="@+id/buttonPlayers"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginTop="156dp"
        android:text="Jugadores"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonTeams"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Equipos"
        app:layout_constraintStart_toStartOf="@+id/buttonPlayers"
        app:layout_constraintTop_toBottomOf="@+id/buttonPlayers" />

    <Button
        android:id="@+id/buttonGames"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Partidos"
        app:layout_constraintStart_toStartOf="@+id/buttonTeams"
        app:layout_constraintTop_toBottomOf="@+id/buttonTeams" />


</androidx.constraintlayout.widget.ConstraintLayout>